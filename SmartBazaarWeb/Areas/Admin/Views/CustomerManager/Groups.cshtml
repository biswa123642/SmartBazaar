@model IEnumerable<SmartBazaar.Web.Areas.Admin.Models.CustomerGroupListViewModel>

@{
    ViewBag.Title = "Müşteri Grupları";
    Layout = "~/Areas/Admin/Views/Shared/LayoutTemplates/ListLayout.cshtml";
    ViewBag.CreateUrl = @Url.Action("CreateGroup");
}

@section Breadcumbs {
    <li>
        @Html.ActionLink("Müşteriler", "Index")
        <i class="fa fa-angle-right"></i>
    </li>
    <li>
        @Html.ActionLink((string)ViewBag.Title, "Groups")
    </li>
}

@section Filters {
    <div class="form-group col-sm-9">
        <label class="control-label col-md-3 col-sm-4">Durum</label>
        <div class="col-md-9 col-sm-8">
            @Html.DropDownList("Status", null, new { @class = "form-control" })
        </div>
    </div>
}


<tr>
    <th>
        @Html.DisplayNameFor(model => model.Title)
    </th>
    <th style="width: 120px;">
        @Html.DisplayNameFor(model => model.PriceIndex)
    </th>
    <th style="width: 100px;">
        @Html.DisplayNameFor(model => model.Status)
    </th>
    <th style="width: 140px;"></th>
</tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceIndex)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "EditGroup", new { id = item.Id }, new { @class = "label label-primary" })
            @Html.ActionLink("Sil", "DeleteGroup", new { id = item.Id }, new { @class = "label label-danger", onclick = "return confirm('Kayit Silinsin mi?')" })
        </td>
    </tr>
}
