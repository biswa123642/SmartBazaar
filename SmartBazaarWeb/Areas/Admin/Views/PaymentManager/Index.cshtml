@model IEnumerable<SmartBazaar.Web.Areas.Admin.Models.PaymentTypesListViewModel>

@{
    ViewBag.Title = "Ödeme Yöntemleri";
    Layout = "~/Areas/Admin/Views/Shared/LayoutTemplates/ListLayout.cshtml";
    ViewBag.CreateUrl = @Url.Action("Create");
}

@section Breadcumbs {
    <li>
        @Html.ActionLink("Ödeme Yöntemleri", "Index")
    </li>
}
@section Filters {
    <div class="form-group col-sm-9">
        <label class="control-label col-md-3 col-sm-4">@Html.DisplayNameFor(model => model.Status)</label>
        <div class="col-md-9 col-sm-8">
            @Html.DropDownList("Status", null, new { @class = "form-control" })
        </div>
    </div>
}

    <tr>
        <th style="width: 220px;">
            @Html.DisplayNameFor(model => model.Method)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th style="width: 100px;">
            @Html.DisplayNameFor(model => model.CommissionRate)
        </th>
        <th style="width: 100px;">
            @Html.DisplayNameFor(model => model.ProcessFee)
        </th>
        <th style="width: 80px;">
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th style="width: 120px;"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Method)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td class="text-right">
            @Html.DisplayFor(modelItem => item.CommissionRate)%
        </td>
        <td class="text-right">
            @Html.DisplayFor(modelItem => item.ProcessFee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "label label-primary" })
            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "label label-danger", onclick = "return confirm('Kayit silinsin mi?')"})
        </td>
    </tr>
}

