<div style="display: none;" class="modal fade bs-modal-lg" id="mdlProducts" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Ürün Listesi</h4>
            </div>
            <div class="modal-body">
                <div class="row" id="divProductSelector">
                    <div class="col-md-12">
                        <div class="form form-horizontal">
                            <div class="form-group">
                                <div class="col-md-10 col-sm-9 text-right">
                                    <input type="text" id="txtProductSearch" placeholder="Arama" class="form-control input-medium pull-right" />
                                </div>
                                <div class="col-md-2 col-sm-3">
                                    <button id="btnProductList" class="btn btn-primary">
                                        <i class="fa fa-bars"></i> Listele
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>Ürün Kodu</th>
                                    <th>Ürün Adı</th>
                                    <th>Kategori</th>
                                    <th style="width: 30px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- ko foreach: items-->
                                <tr>
                                    <td data-bind="text: ProductCode"></td>
                                    <td data-bind="text: Title"></td>
                                    <td data-bind="text: CategoryTitle"></td>
                                    <td><a href="#" data-bind="click: $parent.selectitem" class="label label-primary">Seç</a></td>
                                </tr>
                                <!-- /ko-->
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn default" data-dismiss="modal">Kapat</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
